<header class="bg-dark">
    <div class="container">
        <div class="row">
            <div class="w-100">
                <nav class="navbar navbar-expand-lg navbar-dark">
                    <a class="navbar-brand" href="{{path('app_home')}}">
                        <img src="{{asset('assets/images/logo.png')}}" alt="">
                    </a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <div class="navbar-nav">
                                <a class="nav-item nav-link" href="{{ url('app_home') }}">{% trans %}Strona główna{% endtrans %}</a>
                                {% if(is_granted('ROLE_USER')) %}
                                    <a class="nav-item nav-link" href="{{ url('list_my') }}">{% trans %}Do zrobienia{% endtrans %}</a>
                                    <a class="nav-item nav-link" href="{{ url('list_my',{status: 'done'}) }}">{% trans %}Zrobione{% endtrans %}</a>
                                    <a class="nav-item nav-link" href="{{ url('list_my',{status: 'all'}) }}">{% trans %}Wszystkie{% endtrans %}</a>
                                    <a class="nav-item nav-link" href="{{ url('label_index',{status: 'all'}) }}">{% trans %}Etykiety{% endtrans %}</a>
                                    <a class="nav-item nav-link" href="{{ url('app_logout',{status: 'all'}) }}">{% trans %}Wyloguj{% endtrans %}</a>
                                {% else %}
                                    <a class="nav-item nav-link" href="{{ url('app_login') }}">{% trans %}Zaloguj{% endtrans %}</a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </div>
</header>