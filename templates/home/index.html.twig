    <table class="table">
        <thead>
        <tr>
            <th>Name</th>
            <th>Data dodania</th>
            <th>Termin wykonania</th>
            <th>Etykiety</th>
            <th>Akcje</th>
        </tr>
        </thead>
        <tbody>
        {% for list in lists %}
            <tr>
                {{ dump(list) }}
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Brak wynik√≥w</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_new_list') }}">Dodaj nowe zadanie</a>
{% endblock %}
